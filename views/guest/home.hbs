{{#section 'css'}}
<style>
  .featured-article img, .most-viewed img, .latest-article img, .category-article img {
    max-height: 150px;
    object-fit: cover;
  }
  .carousel-inner img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }
</style>
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  $(document).ready(function() {
    $('.carousel').carousel();
  });
</script>
{{/section}}

<div class="container mt-4">
  <h1 class="mb-4 text-center">Electronic Newspaper Site</h1>

  <div id="featuredCarousel" class="carousel slide mb-5" data-ride="carousel">
    <div class="carousel-inner">
      {{#each featuredArticles}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <img src="/static/images/{{this.thumbnail}}" class="d-block w-100" alt="{{this.title}}">
        <div class="carousel-caption d-none d-md-block">
          <h5>{{this.title}}</h5>
          <p>{{this.summary}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h3 class="mb-3">Most-Viewed Articles</h3>
      <ul class="list-group">
        {{#each mostViewedArticles}}
        <li class="list-group-item">
          <a href="/articles/{{this.id}}">{{this.title}}</a><br>
          <small class="text-muted">{{this.category}} - {{formatDate this.publication_date}}</small>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4">
      <h3 class="mb-3">Latest Articles</h3>
      <ul class="list-group">
        {{#each latestArticles}}
        <li class="list-group-item">
          <a href="/articles/{{this.id}}">{{this.title}}</a><br>
          <small class="text-muted">{{this.category}} - {{formatDate this.publication_date}}</small>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4">
      <h3 class="mb-3">Top Categories</h3>
      <ul class="list-group">
        {{#each topCategories}}
        <li class="list-group-item">
          <a href="/categories/{{this.id}}">{{this.name}}</a><br>
          <a href="/articles/{{this.latestArticle.id}}">
            <small>{{this.latestArticle.title}}</small>
          </a>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
