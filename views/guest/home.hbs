{{#section 'css'}}
<style>
  .carousel-caption {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 10px;
    border-radius: 5px;
  }

  .carousel-inner img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .article-card img {
    height: 200px;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #0056b3;
  }

  .section-header {
    background: linear-gradient(90deg, #0a3a10, #06ac1f);
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-align: center;
    font-size: 1.5rem;
  }
</style>
{{/section}}

<div class="container mt-3">
  <h1 class="section-header">Today's Highlights</h1>

  <div id="featuredCarousel" class="carousel slide mb-5" data-ride="carousel">
    <div class="carousel-inner">
      {{#each featuredArticles}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <img src="/static/images/{{this.thumbnail}}" class="d-block w-100" alt="{{this.title}}">
        <div class="carousel-caption d-none d-md-block">
          <h5>{{this.title}}</h5>
          {{this.summary}}
          <br>{{formatDate this.publication_date}}
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#featuredCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#featuredCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h3 class="section-header">Top Categories</h3>
      <ul class="list-group mb-4">
        {{#each topCategories}}
        <li class="list-group-item">
          <a href="/categories/{{this.category_id}}" class="font-weight-bold">{{this.maincategory_name}} - {{this.subcategory_name}}</a><br>
          <a href="/articles/{{this.article_id}}" class="text-muted">
            <small>{{this.article_title}}</small>
          </a>
        </li>
        {{/each}}
      </ul>

      <h3 class="section-header">Most-Viewed Articles</h3>
      <ul class="list-group">
        {{#each mostViewedArticles}}
        <li class="list-group-item">
          <a href="/articles/{{this.id}}">{{this.title}}</a><br>
          <small class="text-muted">{{this.maincategory_name}} - {{this.subcategory_name}} - {{formatDate this.publication_date}}</small>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-8">
      <h3 class="section-header">Latest Articles</h3>
      <div class="row">
        {{#each latestArticles}}
        <div class="col-md-6 mb-4">
          <div class="card article-card">
            <img src="/static/images/{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.summary}}</p>
              <a href="/articles/{{this.id}}" class="btn btn-primary btn-sm">Read More</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
