<h2 class="text-center mt-3">Manage Tags</h2>
<div class="container mt-3">
    <div class="card mb-4 p-4">
        <form id="add-tag-form" method="POST" action="/admin/tags/add">
            <div class="form-row align-items-center">
                <div class="col-md-10 mb-3">
                    <input type="text" name="name" class="form-control" placeholder="Tag Name" required>
                </div>
                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-success btn-block">Add</button>
                </div>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each tags}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td class="text-center">
                        <div class="btn-group" role="group" aria-label="Actions">
                            <button class="btn btn-primary btn-sm mr-3" data-toggle="modal" data-target="#editTagModal-{{id}}">Edit</button>
                            <form method="POST" action="/admin/tags/delete/{{id}}" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>

                <div class="modal fade" id="editTagModal-{{id}}" tabindex="-1" aria-labelledby="editTagModalLabel-{{id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="POST" action="/admin/tags/update/{{id}}">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editTagModalLabel-{{id}}">Edit Tag</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="editTagName-{{id}}">Tag Name</label>
                                        <input type="text" name="name" id="editTagName-{{id}}" class="form-control" value="{{name}}" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>