<h1>Edit Article</h1>
<form action="/writer/articles/{{article.id}}/edit" method="POST" enctype="multipart/form-data">
  <label>Title:</label>
  <input type="text" name="title" value="{{article.title}}" required>

  <label>Summary:</label>
  <textarea name="summary" required>{{article.summary}}</textarea>

  <label>Content:</label>
  <textarea id="editor" name="content" required>{{article.content}}</textarea>

  <label>Category:</label>
  <select name="category" required>
    {{#each categories}}
      <option value="{{this.id}}" {{#if (eq this.id article.category_id)}}selected{{/if}}>{{this.name}}</option>
    {{/each}}
  </select>

  <label>Tags:</label>
  <input type="text" name="tags" value="{{article.tags}}">

  <label>Upload Image:</label>
  <input type="file" name="image" accept="image/*">

  <button type="submit">Update Article</button>
</form>